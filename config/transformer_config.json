{
    "model": {
        "vocab_size": 1665,
        "hidden_size": 128,
        "num_heads": 8,
        "num_layers": 4,
        "head_dim": 32,
        "intermediate_size": 256,
        "max_seq_length": 32
    },
    "training": {
        "batch_size": 32,
        "num_epochs": 20,
        "dropout_rate": 0.1,
        "weight_decay": 0.01
    },
    "attention": {
        "use_flash_attention": true,
        "use_rope": true,
        "use_sliding_window": true,
        "window_size": 16,
        "use_gqa": true,
        "num_kv_heads": 1
    },
    "optimization": {
        "use_fp16": true,
        "use_gradient_checkpointing": true,
        "memory_pool_size": 1024
    },
    "paths": {
        "save_directory": "checkpoints",
        "model_name": "transformer_model",
        "checkpoint_frequency": 5
    },
    "beam_search": {
        "use_beam_search": false,
        "beam_size": 5,
        "beams_per_group": 4,
        "num_groups": 3,
        "length_penalty": 1.5,
        "temperature": 1.0,
        "top_p": 0.9,
        "max_length": 20,
        "initial_temperature": 3.0,
        "initial_noise_scale": 0.8,
        "diversity_strength": 4.0,
        "top_k": 100,
        "token_noise_scale": 0.1
    },
    "load_from_checkpoint": false,
    "checkpoint_to_load": "",
    "tokenizer": {
        "use_subword": false,
        "vocab_size": 1665,
        "model_path": "model/tokenizer.model",
        "special_tokens": ["<unk>", "<s>", "</s>", "<pad>", "<mask>"]
    },
    "pad_token_id": 0,
    "unk_token_id": 1,
    "bos_token_id": 2,
    "eos_token_id": 3,
    "mask_token_id": 4
} 