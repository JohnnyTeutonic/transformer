{
    "model": {
        "vocab_size": 32000,
        "hidden_size": 128,
        "num_heads": 4,
        "num_layers": 2,
        "head_dim": 32,
        "intermediate_size": 512
    },
    "training": {
        "batch_size": 32,
        "num_epochs": 6,
        "dropout_rate": 0.1,
        "weight_decay": 0.01
    },
    "attention": {
        "use_flash_attention": true,
        "use_rope": true,
        "use_sliding_window": false,
        "window_size": 512,
        "use_gqa": true,
        "num_kv_heads": 2
    },
    "optimization": {
        "use_fp16": false,
        "use_gradient_checkpointing": true,
        "memory_pool_size": 1024
    },
    "paths": {
        "save_directory": "models",
        "model_name": "transformer_new_corpus",
        "checkpoint_frequency": 2
    },
    "beam_search": {
        "beam_size": 5,
        "length_penalty": 0.6,
        "temperature": 1.0,
        "top_p": 0.9,
        "max_length": 20
    },
    "load_from_checkpoint": false,
    "checkpoint_to_load": ""
} 