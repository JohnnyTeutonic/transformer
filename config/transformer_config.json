{
    "attention": {
        "num_kv_heads": 4,
        "use_flash_attention": true,
        "use_gqa": false,
        "use_rope": true,
        "use_sliding_window": true,
        "window_size": 16
    },
    "beam_search": {
        "beam_size": 10,
        "beams_per_group": 4,
        "diversity_strength": 4.0,
        "initial_noise_scale": 0.8,
        "initial_temperature": 3.0,
        "length_penalty": 1.5,
        "max_length": 4,
        "num_groups": 3,
        "temperature": 2.5,
        "token_noise_scale": 0.1,
        "top_k": 100,
        "top_p": 0.98,
        "use_beam_search": false
    },
    "checkpoint_to_load": "",
    "early_stopping": {
        "patience": 3,
        "threshold": 1.5
    },
    "load_from_checkpoint": false,
    "model": {
        "head_dim": 64,
        "hidden_size": 256,
        "intermediate_size": 1024,
        "max_seq_length": 128,
        "num_heads": 8,
        "num_layers": 4
    },
    "optimization": {
        "gradient_accumulation_steps": 8,
        "gradient_clip_threshold": 1.0,
        "layer_norm_epsilon": 1e-05,
        "memory_pool_size": 16384,
        "use_fp16": true,
        "use_gradient_checkpointing": true
    },
    "paths": {
        "checkpoint_frequency": 2,
        "model_name": "transformer_model",
        "save_directory": "checkpoints"
    },
    "special_tokens": {
        "bos_token_id": 2,
        "eos_token_id": 3,
        "mask_token_id": 4,
        "pad_token_id": 0,
        "unk_token_id": 1
    },
    "token_prediction": {
        "category_bonus": {
            "adjective": 0.2,
            "noun": 0.3,
            "verb": 0.2
        },
        "frequency_penalty": 0.1,
        "min_token_prob": 0.05,
        "presence_penalty": 0.1,
        "temperature": 1.2,
        "top_k": 5,
        "top_p": 0.9
    },
    "tokenizer": {
        "model_path": "model/tokenizer.model",
        "special_tokens": [
            "<unk>",
            "<s>",
            "</s>",
            "<pad>",
            "<mask>"
        ],
        "use_subword": false
    },
    "training": {
        "samples_per_iteration": 32,
        "cross_validation": {
            "enabled": true,
            "early_stopping_patience": 3,
            "early_stopping_threshold": 1.5,
            "num_epochs": 4,
            "num_folds": 2,
            "validation_frequency": 2
        },
        "dropout_rate": 0.2,
        "learning_rate": {
            "decay_factor": 0.98,
            "decay_steps": 200,
            "initial_lr": 0.00001,
            "min_lr": 0.000001,
            "peak_lr": 0.0001,
            "warmup_steps": 500
        },
        "num_epochs": 12,
        "tuning": {
            "enabled": false,
            "evaluation_steps": 50,
            "num_trials": 10
        },
        "weight_decay": 0.05
    }
}